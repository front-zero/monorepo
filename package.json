{
  "name": "stor",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "author": "Hasan Mobarak",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "test": "CI=true lerna run test --parallel",
    "typecheck": "lerna run typecheck --parallel",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "start:main": "lerna exec --scope=\"@ht/main\" yarn start",
    "build:main": "lerna exec --scope=\"@ht/main\" yarn build",
    "serve:main": "lerna exec --scope=\"@ht/main\" yarn serve",
    "test:main": "CI=true lerna run test --scope=\"@ht/main\" ",
    "lint:main": "lerna run lint --scope=\"@ht/main\" ",
    "lint:fix:main": "lerna run lint:fix --scope=\"@ht/main\" ",
    "analyze:main": "lerna run analyze --scope=\"@ht/main\" ",
    "start:components": "lerna run start --scope=\"@ht/components\" ",
    "build:components": "lerna exec --scope=\"@ht/components\" yarn build",
    "test:components": "CI=true lerna run test --scope=\"@ht/components\" ",
    "lint:components": "lerna run lint --scope=\"@ht/components\" ",
    "lint:fix:components": "lerna run lint:fix --scope=\"@ht/components\" ",
    "storybook": "lerna exec --scope=\"@ht/components\" yarn storybook ",
    "build-storybook": "lerna exec --scope=\"@ht/components\" yarn build-storybook ",
    "serve-storybook": "lerna exec --scope=\"@ht/components\" yarn serve-storybook ",
    "bootstrap": "lerna bootstrap --use-workspaces & yarn build:components",
    "clean": "lerna run clean && rimraf node_modules",
    "clean:update": "lerna clean && lerna bootstrap",
    "clean-root": "rimraf node_modules",
    "prepare": "husky install"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
