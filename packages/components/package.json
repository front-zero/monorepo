    "scripts": {
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "clean": "rimraf build *.tsbuildinfo node_modules public dist .rollup.cache",
        "typecheck": "tsc -p tsconfig.json",
        "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx",
        "lint:fix": "yarn typecheck & yarn format & yarn lint --fix",
        "storybook": "start-storybook -c .storybook -p 9001",
        "build-storybook": "build-storybook -o public",
        "serve-storybook": "npx http-server public",
        "type-build": "tsc",
        "build": "rimraf dist .rollup.cache & yarn type-build & cross-env NODE_ENV=production rollup -c"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
