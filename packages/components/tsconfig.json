{
    "extends": "../tsconfig.react.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "noFallthroughCasesInSwitch": true,
        "downlevelIteration": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "sourceMap": true
    },
    "include": [
        "src",
        "src/*",
        "src/**/*",
        "postcss.config.js",
        "tailwind.config.js",
        "rollup.config.js",
        "package.json",
        "concat.js",
        "index.ts"
    ]
}
